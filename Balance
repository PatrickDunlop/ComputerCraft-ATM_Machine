function round(num,idp)
  local mult = 10^(idp)
  return math.floor(num * mult + 0.5) / mult
 end
 
local function back()
 
 shell.run("disk/atm/atm")
 
end
 
while true do
 
 local event, key = os.pullEvent("key")
 if key == 14 then
 
  back()
 
 end
 
end
